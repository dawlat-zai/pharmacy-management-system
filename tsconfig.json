{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowJs": true,
    "paths": {
      "@/*": ["resources/js/*"],
      "~/*": ["resources/*"],
    },
  },
  "include": ["resources/js/**/*"], // Frontend paths pattern
  "exclude": ["node_modules"]
}
